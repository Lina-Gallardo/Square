<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h3>Registrar usuarios</h3>
        </div>
        <div class="card-body">
          <form action="/signup" method="POST">
            <input class="form-control my-3" type="number" name="id_user" placeholder="Identificación" autofocus>
            <input class="form-control my-3" type="text" name="name_user" placeholder="Nombre Completo">
            <input class="form-control my-3" type="email" name="email_user" placeholder="Email">
            <input class="form-control my-3" type="password" name="password_user" placeholder="Contraseña">
            <select class="form-select my-3" name="role_user" aria-label="Default select example">
              <option selected>Seleccione un role</option>
              <option value="Estudiante">Estudiante</option>
              <option value="Docente">Docente</option>
              <option value="Administrativo">Administrativo</option>
            </select>
            <button class="btn btn-success">Registrar</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

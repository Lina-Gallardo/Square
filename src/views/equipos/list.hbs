<div class="container p-4">
  <div class="row">
    <div class="">
      <form action="/equipos/list/{{id_sala}}" method="POST">
        <div class="form-group m-3">
          <select class="form-select my-3" name="hora_reserva">
            <option selected>{{hora_reserva}}</option>
            {{#formatoHoras (horaActual horario)}}
            {{/formatoHoras}}
          </select>
          <button class="btn btn-outline-success">Filtrar</button>
        </div>
      </form>
    </div>
    {{#each equipos}}
      <div class="col-md-4">
        <div class="card text-center my-3">
          <div class="card-body">
            <a href="#">
              <h5 class="card-title text-uppercase">Equipo {{id_equipo}}</h5>
            </a>
            {{#if disponibilidad_equipo}}
            <p> Equipo dispobible</p>
            <p>{{hora_reserva}}</p>
            <a href="/reservas/add/{{id_sala}}/{{id_equipo}}/{{hora_reserva}}">Reservar equipo</a>
            {{else}}
            <p> Equipo reservado</p>
            {{/if}}
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>
